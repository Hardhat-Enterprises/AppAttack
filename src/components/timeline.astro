---
import "../style/timeline.scss";
---

<div class="swiper-container not-content">
  <div class="swiper-wrapper timeline">
    <div class="swiper-slide">
      <div class="timestamp">
        <span>Trimester T2 2023</span>
      </div>
      <div class="status completed">
        <span>
            Project ECHO from DataBytes & PTGUI from Hardhat
        </span>
      </div>
    </div>
    <div class="swiper-slide">
      <div class="timestamp">
        <span>Trimester T3 2023</span>
      </div>
      <div class="status completed">
        <span>Project ECHO from DataBytes</span>
      </div>
    </div>
    <div class="swiper-slide">
      <div class="timestamp">
        <span>Trimester T1 2024</span>
      </div>
      <div class="status">
        <span>Ontrack from  Thoth Tech</span>
      </div>
    </div>
  </div>
</div>


<style>
  :global([data-theme="light"]) .completed span:before {
    border: 3px solid rgb(245, 199, 61) !important;
  }

  :global([data-theme="light"]) .timeline:before {
    background: rgba(52, 56, 65, 0.671) !important;
    background: -moz-linear-gradient(
      top,
      rgba(52, 56, 65, 0) 0%,
      rgba(52, 56, 65, 0.671) 8%,
      rgba(52, 56, 65, 0.671) 92%,
      rgba(52, 56, 65, 0) 100%
    ) !important;
    background: -webkit-gradient(
      linear,
      left top,
      left bottom,
      color-stop(0%, rgba(30, 87, 153, 1)),
      color-stop(100%, rgba(125, 185, 232, 1))
    ) !important;
    background: -webkit-linear-gradient(
      top,
      rgba(52, 56, 65, 0) 0%,
      rgba(52, 56, 65, 0.671) 8%,
      rgba(52, 56, 65, 0.671) 92%,
      rgba(52, 56, 65, 0) 100%
    ) !important;
    background: -o-linear-gradient(
      top,
      rgba(52, 56, 65, 0) 0%,
      rgba(52, 56, 65, 0.671) 8%,
      rgba(52, 56, 65, 0.671) 92%,
      rgba(52, 56, 65, 0) 100%
    ) !important;
    background: -ms-linear-gradient(
      top,
      rgba(52, 56, 65, 0) 0%,
      rgba(52, 56, 65, 0.671) 8%,
      rgba(52, 56, 65, 0.671) 92%,
      rgba(52, 56, 65, 0) 100%
    ) !important;
    background: linear-gradient(
      to bottom,
      rgba(52, 56, 65, 0) 0%,
      rgba(52, 56, 65, 0.671) 8%,
      rgba(52, 56, 65, 0.671) 92%,
      rgba(52, 56, 65, 0) 100%
    ) !important;
  }

  :global([data-theme="light"]) .flag {
    background: rgb(52, 56, 65) !important;
    color: rgb(83, 88, 100) !important;
  }

  :global([data-theme="light"]) .completed .flag:before {
    border: 3px solid rgb(245, 199, 61) !important;
  }

  :global([data-theme="dark"]) .completed span a {
    color: hsl(234, 100%, 87%) !important;
  }

  :global([data-theme="light"]) .completed span a {
    color: rgb(245, 199, 61) !important;
  }

  :global([data-theme="light"]) .flag:after {
    border-bottom-color: rgb(52, 56, 65) !important;
  }
</style>
